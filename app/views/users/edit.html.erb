<h2>Edit Your Account</h2>
<p><%= link_to 'Show Profile', user_path(@user) %> | 
<%= link_to 'Change Password', change_password_path %>
</p>
<%= error_messages_for :user %>

<% form_for :user, :url => user_url(@user), :html => { :multipart=> true , :method => :put } do |f| %>
<p>Email:<br /><%= f.text_field :email, :size => 60 %></p>

<%= file_column_field "user", "image" %>

<%= submit_tag 'Save' %>
<% end %>
<script type='text/javascript'>
document.getElementById('user_email').focus()
</script>
